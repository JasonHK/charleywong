{
    "$id": "Place.json",
    "type": "object",
    "properties": {
        "address": {
            "$ref": "MultiLangString.json"
        },
        "googleMapsPlaceId": {
            "type": "string",
            "pattern": "^[A-Za-z0-9\\-_]+$"
        },
        "coordinates": {
            "type": "object",
            "properties": {
                "lat": {
                    "type": "number"
                },
                "lng": {
                    "type": "number"
                }
            },
            "required": [
                "lat",
                "lng"
            ],
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}